      </table>
    </div>
  </div>
  <div class="grid-item">
    <h3 class="card-headers">Bowel Movements</h3>
    <div class="chart-card">
      <canvas class="chart-canvas" data-activities-target="bowel"></canvas>
    </div>
  </div>
  <div class="grid-item">
    <h3 class="card-headers">Mood Consistency</h3>
    <div class="chart-card">
      <canvas class="chart-canvas" data-activities-target="mood"></canvas>
    </div>
  </div>
</div>

<div class="sidebar">
  <div class="scrollable-div">
    <% @activities.each do |activity| %>
      <div class="activity-log">
        <h2 class="activity-log-header"><%= activity.date.strftime("%A, %B %e, %Y") %></h2>
        <h3 class="card-headers">Snacks</h3>
        <div class="info-card">
          <p><%= activity.snack %></p>
          <p><strong>Eaten: </strong><%= activity.snack_consumption %></p>
        </div>

        <h3 class="card-headers">Lunch</h3>
        <div class="info-card">
          <p><%= activity.lunch %></p>
          <p><strong>Eaten: </strong><%= activity.lunch_consumption %></p>
        </div>

        <h3 class="card-headers">Bowel Movements</h3>
        <div class="info-card">
          <p><strong>Amount: </strong><%= activity.bowel_movement %></p>
        </div>

        <h3 class="card-headers">Nap Time</h3>
        <div class="info-card">
          <p><strong>Duration: </strong><%= activity.nap_duration %></p>
        </div>

        <h3 class="card-headers">Mood</h3>
        <div class="info-card">
          <p><strong>Overall: </strong><%= activity.overall_mood %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
