<div id="message-<%= message.id %>">
        <small>
          <% if current_user == message.user %>
            <%= image_tag "chatparent.png", width: 20, height: 25, class: "message-avatar" %>

          <% else %>
            <%= image_tag "chatteacher.png", width: 20, height: 25, class: "message-avatar" %>
          <% end %>
          <strong class='h5'><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a  %b  %e  at  %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
